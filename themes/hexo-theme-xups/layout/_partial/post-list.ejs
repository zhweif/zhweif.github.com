<% if (index == true) { %>
    <h3 class="widget-hd">
        <strong>
            <% if (pagination == 2) { %>
                最近动态
            <% } else if (pagination == 3) { %>
                `<%- page.year ? page.year + '年' : '' %><%- page.month ? page.month + '月' : '' %>`文章归档
            <% } else if (pagination == 4) { %>
                `<%- page.category %>`分类下的文章
            <% } else if (pagination == 5) { %>
                `<%- page.tag %>`标签下的文章
            <% } %>
        </strong>
    </h3>
    <% page.posts.each(function(post) { %>
        <%- partial('post/post-item', { post: post }) %>
    <% }) %>

    <% if (page.total >= 1){ %>
    <nav class="page-navigator">
        <%- paginator({
            prev_text: '上页',
            next_text: '下页'
        }) %>
    </nav>
    <% } %>
<% } %>
